<% if user_signed_in? %>
  <% if @user.id == current_user.id %>
    <h2>マイページ</h2>
  <% else %>
    <h2>ユーザー情報</h2>
  <% end %>
<% else %>
  <h2>ユーザー情報</h2>
<% end %>
<p><%= image_tag @user.image.url, class:"icon_image" if @user.image.url %></p>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>
<% if user_signed_in? %>
  <% if @user.id == current_user.id %>
    <%= link_to "編集", edit_user_registration_path(current_user) %>
  <% end %>
<% end %>
<br>
<br>
<h3>投稿したツッコミ</h3>
<% @user.tsukkomis.all.each do|tsukkomi| %>
  <%= link_to tsukkomi.phrase, situation_tsukkomi_path(tsukkomi.situation_id, tsukkomi.id) %><br>
  <label>お気に入り数：<%= tsukkomi.favorites.count %></label><br>
<% end %>
<br>
<h3>お気に入り一覧</h3>
<% @user.favorites.all.each do|fav| %>
  <%= link_to fav.tsukkomi.phrase, situation_tsukkomi_path(fav.tsukkomi.situation_id, fav.tsukkomi.id) %><br>
  <label>お気に入り数：<%= fav.tsukkomi.favorites.count %></label><br>
<% end %>
