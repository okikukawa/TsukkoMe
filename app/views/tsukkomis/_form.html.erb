<div class="">
  <%= form_with(model: [@situation, @tsukkomi], local: true) do |f| %>
    <% if @tsukkomi.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @tsukkomi.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <!-- <div class="new-tsukkomi-content">
      <p>このシチュエーションを何かに例えてみましょう！</p>
    </div> -->
    <div class="submit-form">
      <%= f.text_field :phrase, placeholder: "ツッコミを入力" %>
    </div>
    <div class="submit-button">
      <%= f.submit class: "btn btn-warning" %>
    </div>
  <% end %>
</div>
