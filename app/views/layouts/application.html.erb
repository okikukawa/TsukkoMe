<!DOCTYPE html>
<html>
  <head>
    <title>TsukkoMe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=M+PLUS+Rounded+1c" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <div class="header header_logo">
        <%= link_to "TsukkoMe", situations_path %>
      </div>
      <div class="header header_right">
        <ul>
          <li><%= link_to "ツッコミをみる", situations_path %></li>
          <li><%= link_to "ツッコミをきたえる", thousand_fungo_situations_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "マイページ", user_path(current_user) %></li>
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "ログイン", new_user_session_path %></li>
        <% end %>
        </ul>
      </div>
    </header>
    <!-- <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %> -->
    <%= yield %>
    <footer>
    </footer>
  </body>
</html>
