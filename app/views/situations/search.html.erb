<h4>ツッコミ</h4>

<%= search_form_for @search, url: search_situation_path(@situation) do |f| %>
  <%= f.search_field :phrase_cont, placeholder: "キーワードを入力" %>
  <%= f.submit '検索' %>
<% end %>

<% @results.each do |tsukkomi| %>
  <p><%= link_to tsukkomi.phrase %></p>
<% end %>
